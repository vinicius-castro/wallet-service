<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="create-wallet-sequence" author="vicastro">
        <createSequence sequenceName="wallet_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="create-wallet-table" author="vicastro">
        <createTable tableName="wallet">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue
                tableName="wallet"
                columnName="id"
                defaultValueSequenceNext="wallet_seq"/>
    </changeSet>

    <changeSet id="add-unique-constraint-wallet-code" author="vicastro">
        <addUniqueConstraint tableName="wallet" columnNames="code" constraintName="uk_wallet_code"/>
    </changeSet>

</databaseChangeLog>
